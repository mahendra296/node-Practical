<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>URL Shortener - Quick Links</title>
    <link rel="stylesheet" href="/style.css" />
    <script src="/script.js"></script>
  </head>
  <body>
    <!-- Header with Navbar -->
    <%- include('header') %>

    <!-- Main Content -->
    <main class="main-content">
      <div class="container">
        <div class="hero-section">
          <h1>URL Shortener</h1>
          <p class="subtitle">Create short, memorable links in seconds</p>
        </div>

        <div class="shortener-card">
          <form action="/" method="post">
            <div class="form-group">
              <label for="url">Enter URL:</label>
              <input
                type="url"
                id="url"
                name="url"
                placeholder="https://example.com/very-long-url"
                value="<%= typeof formData !== 'undefined' && formData.url ? formData.url : '' %>"
                required
              />
            </div>

            <div class="form-group">
              <label for="shortCode">Custom Shortcode (optional):</label>
              <input
                type="text"
                id="shortCode"
                name="shortCode"
                placeholder="myshortcode"
                pattern="[a-zA-Z0-9-_]+"
                title="Only letters, numbers, hyphens and underscores allowed"
                value="<%= typeof formData !== 'undefined' && formData.shortCode ? formData.shortCode : '' %>"
              />
              <small class="form-hint"
                >Leave blank for auto-generated code</small
              >
            </div>

            <button type="submit" class="btn-shorten">
              <span>✨</span> Shorten URL
            </button>
          </form>

          <!-- Error Message -->
          <% if (typeof error !== 'undefined' && error) { %>
          <div class="error-message">
            <span class="error-icon">⚠️</span>
            <span class="error-text"><%= error %></span>
          </div>
          <% } %>

          <!-- Success Message -->
          <% if (typeof success !== 'undefined' && success) { %>
          <div class="success-message">
            <span class="success-icon">✅</span>
            <span class="success-text"><%= success %></span>
          </div>
          <% } %>

          <div id="result" class="result-container">
            <h3>Your Shortened URLs:</h3>

            <ul class="urls-list">
              <% links.map(({short_code, url}) => { const displayUrl =
              url.length > 20 ? url.substring(0, 20) + "..." : url; %>
              <li>
                <div class="url-info">
                  <a href="/shortCode/<%= short_code %>" target="_blank"
                    ><%= host + "/" +short_code %></a
                  >
                  <span class="url-original">- <%= displayUrl %></span>
                </div>
                <form
                  action="/delete/<%= short_code %>"
                  method="POST"
                  class="delete-form"
                >
                  <button
                    type="submit"
                    class="btn-delete"
                    title="Delete this short link"
                  >
                    ✕
                  </button>
                </form>
              </li>
              <% }) %>
            </ul>
          </div>
        </div>
      </div>
    </main>

    <!-- Footer -->
    <%- include('footer') %>
  </body>
</html>
